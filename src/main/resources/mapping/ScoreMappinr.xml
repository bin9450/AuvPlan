<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.auv.mapper.ScoreMapper">
    <resultMap id="BaseResultMap" type="com.auv.entity.Score">
        <result column="UserID" jdbcType="INTEGER" property="userID" />
        <result column="LoginName" jdbcType="VARCHAR" property="loginName"/>
        <result column="PassWord" jdbcType="VARCHAR" property="passWord" />
        <result column="TimeStamp" jdbcType="VARCHAR" property="time" />
    </resultMap>

    <select id="sel" resultType="User">
        select * from user where UserID = #{userID}
    </select>


    <select id="login" resultType="User">
        SELECT * FROM user where LoginName = #{param1} and password = #{param2}
    </select>

    <select id="isRepeat" resultType="User">
        SELECT * FROM user where LoginName = #{loginName}
    </select>

    <insert id="register" parameterType="User">
        INSERT INTO user (LoginName, PassWord) VALUES (#{loginName}, #{passWord})
    </insert>

</mapper>
